<h1>User #<%= @user.id %></h1>

<div>
  <strong>Name</strong>:<br />
  <p><%= @user.name %></p>
</div>
<div>
  <strong>Email</strong>:<br />
  <p><%= @user.email %></p>
</div>
<div class = "list-group">
<% @bookmarks.each do |mark| %>
    <tr>
      <div class = "list-group-item">
        <td><%= mark.name %></td>
      </div>

    </tr>
<% end %>
</div>

<a href="/users/<%= @user.id %>/edit">Edit</a> |
<a href="/users/<%= @user.id %>/destroy">Destroy</a>
