<% @ideas.each do |idea| %>
  <div class="stripe">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <%= idea.idea %>
          <a href="/ideas/<%= idea.id %>">Show</a> |
          <a href="/ideas/<%= idea.id %>/edit">Edit</a> |
          <a href="/ideas/<%= idea.id %>/destroy">Destroy</a>
        </div>
      </div>
    </div>
  </div>
<% end %>
